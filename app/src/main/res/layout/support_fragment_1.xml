<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/blue_gradient"
    >

    <Button
        android:textColor="#222222"
        android:id="@+id/create_ticket"
        android:background="@android:color/white"
        android:layout_width="200dp"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="CREATE NEW TICKET"
        android:textAllCaps="false"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content">
        <View
            android:layout_width="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_height="0.5dp"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/OR1"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"/>
        <View
            android:layout_width="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="right"
            android:layout_height="0.5dp"
            android:background="@android:color/white"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dp"
         android:layout_marginTop="5dp"
         android:id="@+id/email_text1"
         android:layout_gravity="center"
         android:textSize="22dp"
         android:text="Send us mail @ "
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:id="@+id/email_text2"
        android:layout_gravity="center"
        android:textSize="22dp"
        android:text="support@smarterhomes.com"
        />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:layout_width="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="70dp"
            android:layout_height="0.5dp"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/OR2"
            android:layout_gravity="center"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"/>
        <View
            android:layout_width="80dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="70dp"
            android:layout_gravity="right"
            android:layout_height="0.5dp"
            android:background="@android:color/white"/>
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
     <TextView
         android:id="@+id/call_support1"
         android:layout_width="wrap_content"
         android:layout_marginTop="15dp"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:textSize="22dp"
         android:text="Call us at"
         />
     <TextView
         android:id="@+id/call_support2"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:textSize="22dp"
         android:text="1-860-419-4646"
         />
     <TextView
         android:id="@+id/call_support3"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:textStyle="italic"
         android:textSize="22dp"
         android:text="(local charges apply)"
         />
     <TextView
         android:id="@+id/call_support4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="center"
         android:textSize="22dp"
         android:text="8am to 8pm"
         />
    </LinearLayout>
</LinearLayout>
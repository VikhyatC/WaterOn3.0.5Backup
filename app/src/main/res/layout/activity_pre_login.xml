<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/pre_login"
    tools:context="com.wateron.smartrhomes.activities.PreLoginActivity">

    <LinearLayout
        android:visibility="visible"
        android:id="@+id/WelcomeScreen"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/m1"
            android:background="@drawable/blue_gradient"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">
            <ImageView
                android:layout_marginTop="30dp"
                android:src="@drawable/wateron_logo"
                android:scaleType="fitCenter"
                android:layout_width="match_parent"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/welcometitle"
                android:textColor="#fff"
                android:layout_margin="20dp"
                android:textSize="24dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="@string/welcome_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


            <FrameLayout
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/view1"
                    android:src="@drawable/intro1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:background="#fff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#222"
                android:id="@+id/welcomelable"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:text="@string/welcome_lable_1"/>
            <LinearLayout
                android:layout_marginBottom="15dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/dot1"
                    android:layout_margin="3dp"
                    android:src="@drawable/fulldot"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <ImageView
                    android:id="@+id/dot2"
                    android:layout_margin="3dp"
                    android:src="@drawable/empty_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <ImageView
                    android:id="@+id/dot3"
                    android:layout_margin="3dp"
                    android:src="@drawable/empty_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
                <ImageView
                    android:id="@+id/dot4"
                    android:layout_margin="3dp"
                    android:src="@drawable/empty_dot"
                    android:layout_width="10dp"
                    android:layout_height="10dp" />
            </LinearLayout>

            <Button
                android:id="@+id/signUp"
                android:textColor="#fff"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_effect"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Sign up now"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"/>
            <Button
                android:textColor="#222"
                android:id="@+id/signin"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"
                android:layout_width="150dp"
                android:layout_height="35dp"
                android:text="Sign in"
                android:textAllCaps="false"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:visibility="gone"
        android:id="@+id/frame_holder_pre_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50.0dp"
        android:layout_margin="10.0dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:paddingLeft="5dp"
            android:layout_centerVertical="true"
            android:id="@+id/homemenubutton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="25.0dp"
                android:layout_height="20.0dp"
                android:background="@drawable/backicon" />
        </LinearLayout>


        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/spinner_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/homemenubutton"
            android:gravity="center"
            android:text="Accounts"
            android:textColor="#ffffffff"
            android:textSize="20.0dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaffffff"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <TextView
            fontPath="fonts/roboto_regular.ttf"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change account settings"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaffffff"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_margin="15dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                fontPath="fonts/roboto_regular.ttf"
                android:id="@+id/inst_lc_label"
                android:textSize="16dp"
                android:layout_margin="5dp"
                android:text="Registered Mobile Number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    fontPath="fonts/roboto_light.ttf"
                    android:id="@+id/inst_lc"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:text="+91 96324 30058"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <EditText
                    android:singleLine="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:id="@+id/changesettings"
                    android:ems="10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </FrameLayout>

        </LinearLayout>

        <ImageButton
            android:visibility="gone"
            android:id="@+id/edit_meter_button"
            android:layout_marginRight="30dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/menu_edit"
            android:layout_width="30dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaffffff"/>

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <TextView
            fontPath="fonts/roboto_regular.ttf"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Family Members"/>
        <ImageButton
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:id="@+id/addmemeber"
            android:src="@drawable/plus"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_width="35dp"
            android:layout_height="35dp" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#aaffffff"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/mm1"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            fontPath="fonts/roboto_light.ttf"
                            android:id="@+id/mobilenu1"
                            android:textSize="20dp"
                            android:layout_margin="10dp"
                            android:text="Bathrrom 1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            fontPath="fonts/roboto_light.ttf"
                            android:singleLine="true"
                            android:focusable="true"
                            android:visibility="gone"
                            android:id="@+id/changemobile1"
                            android:ems="10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>

                </LinearLayout>

                <ImageButton
                    android:id="@+id/delete1"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageButton
                    android:id="@+id/edit_meter_button1"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/menu_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <View
                android:id="@+id/e1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"/>
            <LinearLayout
                android:id="@+id/mm2"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            fontPath="fonts/roboto_light.ttf"
                            android:id="@+id/mobilenu2"
                            android:textSize="20dp"
                            android:layout_margin="10dp"
                            android:text="Bathrrom 1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            fontPath="fonts/roboto_light.ttf"
                            android:singleLine="true"
                            android:focusable="true"
                            android:visibility="gone"
                            android:id="@+id/changemobile2"
                            android:ems="10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/delete2"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageButton
                    android:id="@+id/edit_meter_button2"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/menu_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <View
                android:id="@+id/e2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"/>
            <LinearLayout
                android:id="@+id/mm3"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_marginLeft="5dp"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            fontPath="fonts/roboto_light.ttf"
                            android:id="@+id/mobilenu3"
                            android:textSize="20dp"
                            android:layout_margin="10dp"
                            android:text="Bathrrom 1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <EditText
                            android:imeOptions="actionDone"
                            android:inputType="phone"
                            fontPath="fonts/roboto_light.ttf"
                            android:singleLine="true"
                            android:focusable="true"
                            android:visibility="gone"
                            android:id="@+id/changemobile3"
                            android:ems="10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </FrameLayout>

                </LinearLayout>
                <ImageButton
                    android:id="@+id/delete3"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/delete"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
                <ImageButton
                    android:id="@+id/edit_meter_button3"
                    android:layout_marginRight="20dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:src="@drawable/menu_edit"
                    android:layout_width="30dp"
                    android:layout_height="30dp" />
            </LinearLayout>

            <View
                android:id="@+id/e3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
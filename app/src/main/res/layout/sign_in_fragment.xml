<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_marginTop="50dp"
            android:src="@drawable/wateron_logo"
            android:scaleType="fitCenter"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView

            android:textColor="#fff"
            android:layout_margin="30dp"
            android:textSize="25dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Sign in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_height="fill_parent">
        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:nextFocusDown="@+id/mobile"
                android:textSize="15dp"
                android:inputType="number"
                android:textColor="#222222"
                android:id="@+id/ccode"
                android:textColorHint="#4d4d4d"
                android:hint="Country"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="#efefef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="4"/>
            <EditText
                android:layout_marginLeft="3dp"
                android:nextFocusDown="@+id/name"
                android:textSize="15dp"
                android:inputType="number"
                android:textColor="#222222"
                android:id="@+id/mobile"
                android:textColorHint="#4d4d4d"
                android:hint="Mobile No"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:padding="10dp"
                android:layout_gravity="center"
                android:background="#efefef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="9"/>
        </LinearLayout>

        <FrameLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:textSize="15dp"
                android:inputType="textPassword"
                android:textColor="#222222"
                android:id="@+id/name"
                android:textColorHint="#4d4d4d"
                android:hint="Password"

                android:padding="10dp"
                android:layout_gravity="center_horizontal"
                android:background="#efefef"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="13"/>
            <TextView

                android:id="@+id/showpss"
                fontPath="fonts/roboto_light.ttf"
                android:textAllCaps="false"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#222"
                android:layout_gravity="right|center_vertical"
                android:background="@drawable/eyehint"
                android:layout_margin="10dp"

                android:layout_width="15dp"
                android:layout_height="15dp" />
        </FrameLayout>
        <TextView
            android:textColor="#fff"
            android:textSize="14sp"
            android:id="@+id/forgot_password_button"
            android:layout_marginRight="65dp"
            android:layout_marginTop="15dp"
            android:layout_gravity="right"
            android:text="forgot password ?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <!--<EditText-->
        <!--android:textSize="15dp"-->
        <!--android:inputType="textPassword"-->
        <!--android:textColor="#222222"-->
        <!--android:id="@+id/name"-->
        <!--android:textColorHint="#4d4d4d"-->
        <!--android:hint="Password"-->

        <!--android:padding="10dp"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--android:background="#efefef"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:ems="10"/>-->
    </LinearLayout>

    <!--<TextView-->
    <!--android:layout_margin="10dp"-->
    <!--android:textColor="#222"-->
    <!--android:gravity="center"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:text="Minimum 8 characters with at least one special character"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:id="@+id/textView2" />-->

    <LinearLayout
        android:background="@drawable/gray_gradient"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/whyIamOut"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="5dp"
                fontPath="fonts/roboto_regular.ttf"
                android:textColor="#000"
                android:layout_marginBottom="10dp"
                android:textSize="15sp"
                android:gravity="center"
                android:text="Registered but login fails?"
                android:layout_width="match_parent"
                android:layout_height="20dp" />
            <ImageView
                android:src="@drawable/playicon"
                android:layout_width="30dp"
                android:layout_height="30dp" />
        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:textColor="#222222"
            android:id="@+id/welcomelable"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:text="@string/welcome_lable_1"/>
        <LinearLayout
            android:layout_marginBottom="15dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/dot1"
                android:layout_margin="3dp"
                android:src="@drawable/empty_dot"
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <ImageView
                android:id="@+id/dot2"
                android:layout_margin="3dp"
                android:src="@drawable/empty_dot"
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <ImageView
                android:id="@+id/dot3"
                android:layout_margin="3dp"
                android:src="@drawable/empty_dot"
                android:layout_width="10dp"
                android:layout_height="10dp" />
            <ImageView
                android:id="@+id/dot4"
                android:layout_margin="3dp"
                android:src="@drawable/fulldot"
                android:layout_width="10dp"
                android:layout_height="10dp" />
        </LinearLayout>

        <Button
            android:id="@+id/signin"
            android:textColor="#fff"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_effect"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:text="Sign in"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:textColor="#222222"
            android:id="@+id/signUp"
            android:layout_marginBottom="15dp"
            android:background="@android:color/transparent"
            android:layout_width="150dp"
            android:layout_height="35dp"

            android:text="Sign up now"
            android:textAllCaps="false"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>
</LinearLayout>